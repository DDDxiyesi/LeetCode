
public class Solution {
    public int addDigits(int num) {
        return 1+(num-1)%9;
            
    }
}


public class Solution {
    public int addDigits(int num) {
        int sum = 0;
        while(true){
            if(num>0){
                sum += num%10;
                System.out.println(sum);
                num = num/10;
            }
            else if (sum>9)
                {
                    sum =addDigits(sum);
                
            }
            else break;
            
        }
        return sum;
            
    }
}
